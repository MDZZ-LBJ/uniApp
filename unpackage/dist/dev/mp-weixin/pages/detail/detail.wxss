.player{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	background-color: black;
}
.movie{
	width: 100%;
	height: 440rpx;
}
.movie-info{
	height: 800px;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	background-color: #f7f4f9;
	padding: 40rpx 20rpx;
}
.poster{
	width: 280rpx;
	height: 380rpx;
}
.movie-desc{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	margin-left: 30rpx;
	width: 400rpx;
}
.title{
  font-size: 30px;
}
.basic-info{
	color:darkgray;
	font-size: 13px;
	line-height: 36rpx;
}

